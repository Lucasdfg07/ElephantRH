<section class="new_patient text-center">
    <h4>Cadastro de um Cliente</h4>
    <%= form_with model: @form do |f| %>
      <section class="card">
        <section class="card-header">
          Dados da Entrevista
        </section>

        <section class="card-body">
          <section class="row">
            <section class="col-6">
              Momento Pessoal <br />
              <%= f.text_area :personal_moment %>
            </section>

            <section class="col-6">
              Momento Profissional <br />
              <%= f.text_area :profissional_moment %>
            </section>

            <section class="col-6">
              Autopercepção e Interesses <br />
              <%= f.text_area :interests %>
            </section>

            <section class="col-6">
              Conclusões da Entrevista <br />
              <%= f.text_area :conclusions %>
            </section>
          </section>
        </section>
      </section>

      <section class="card intelectual-area">
        <section class="card-header">
          Área Intelectual
        </section>

        <section class="card-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Habilidades</th>
                <th>Conceito</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td>Potencial Intelectual</td>
                <td><%= f.text_field :intelectual_map[0] %></td>
              </tr>

              <tr>
                <td>Atenção Concentrada</td>
                <td><%= f.text_field :intelectual_map[1] %></td>
              </tr>

              <tr>
                <td>Atenção Difusa</td>
                <td><%= f.text_field :intelectual_map[2] %></td>
              </tr>

              <tr>
                <td>Habilidade  Numérica</td>
                <td><%= f.text_field :intelectual_map[3] %></td>
              </tr>
            </tbody>
          </table>

          <section class="text-center font-weight-bold table-description">
            <ul>
              <li>S – Superior</li>
              <li>MS – Médio Superior</li>
              <li>M – Médio</li>
              <li>MI – Médio Inferior</li>
              <li>I – Inferior</li>
            </ul>
          </section>
        </section>
      </section>

      <section class="card facilities">
        <section class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Competências Facilitadoras</th>
                <th>Aspectos Limitadores</th>
                <th>Remover</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= f.text_field :facilities[0] %></td>
                <td><%= f.text_field :dificulties[0] %></td>
                <td><a href="#"><%= fa_icon "times" %></a></td>
              </tr>
            </tbody>
          </table>

          <section class="add-aspects pull-right">
            +
          </section>
        </section>
      </section>

      <section class="card">
        <section class="card-header">
          Dados Psicológicos
        </section>

        <section class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Dados</th>
                <th>Conceito</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td>Dinamismo</td>
                <td><%= f.text_field :psicological_concepts[0] %></td>
              </tr>

              <tr>
                <td>Comunicação</td>
                <td><%= f.text_field :psicological_concepts[1] %></td>
              </tr>

              <tr>
                <td>Trabalho em Equipe</td>
                <td><%= f.text_field :psicological_concepts[2] %></td>
              </tr>

              <tr>
                <td>Relacionamento</td>
                <td><%= f.text_field :psicological_concepts[3] %></td>
              </tr>

              <tr>
                <td>Organização</td>
                <td><%= f.text_field :psicological_concepts[4] %></td>
              </tr>

              <tr>
                <td>Adaptação</td>
                <td><%= f.text_field :psicological_concepts[5] %></td>
              </tr>

              <tr>
                <td>Trabalho sob pressão</td>
                <td><%= f.text_field :psicological_concepts[6] %></td>
              </tr>

              <tr>
                <td>Proatividade</td>
                <td><%= f.text_field :psicological_concepts[7] %></td>
              </tr>

              <tr>
                <td>Iniciativa</td>
                <td><%= f.text_field :psicological_concepts[8] %></td>
              </tr>
            </tbody>
          </table>
        </section>
      </section>

      <section class="card">
        <section class="card-body">
          Diagnóstico de Desempenho <br />
          <%= f.text_area :performance_diagnostic %>
        </section>
      </section>

      <br />

      <%= f.submit 'Salvar', class: 'btn btn-primary save' %>

    <% end %>
</section>
